<Window x:Class="IdentityPasswordTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:IdentityPasswordTool.ViewModels"
        Title="Identity Password Hash Tool"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Klartext Passwort" FontWeight="Bold"/>
        <TextBox Grid.Row="1"
                 Height="30"
                 Text="{Binding PlainPassword}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="IterationCount:" VerticalAlignment="Center"/>
            <TextBox Width="80" Margin="5,0,10,0" Text="{Binding IterationCount}"/>
            <CheckBox Content="Identity V3" IsChecked="{Binding UseIdentityV3}"/>
        </StackPanel>
        <TextBlock Grid.Row="2"
                   Margin="5,40,0,0"
                   Foreground="DarkRed"
                   Text="{Binding VersionHint}" />


        <Button Grid.Row="3"
                Height="35"
                Margin="0,10,0,10"
                Content="Hash generieren"
                Command="{Binding GenerateCommand}"/>

        <TextBox Grid.Row="4"
                 Text="{Binding PasswordHash}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"/>
    </Grid>

</Window>